<resources>

    <style name="OpulexTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splashscreen" parent="Theme.AppCompat.NoActionBar" />

    <style name="OpulexTheme.Toolbar">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="OpulexTheme.ButtonSoft">
        <item name="android:background">@drawable/button_soft_background</item>
        <item name="android:textColor">@color/colorVsLight</item>
    </style>

    <style name="OpulexTheme.ButtonVsDark">
        <item name="android:background">@drawable/button_vs_dark_background</item>
        <item name="android:textColor">@color/colorVsDark</item>
    </style>

    <style name="OpulexTheme.ButtonPop">
        <item name="android:background">@drawable/button_pop_background</item>
        <item name="android:textColor">@color/colorVsLight</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.20</item>
    </style>

    <style name="OpulexTheme.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="OpulexTheme.CardViewLight">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/colorBackgroundHighlight</item>
    </style>

    <style name="OpulexOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="OpulexTheme.MainNameText">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/minion_pro_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="OpulexTheme.LoginEditTextLayout">
        <item name="android:background">@drawable/button_vs_dark_background</item>
        <item name="android:textColorHint">@color/colorVsDarkSoft</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>
