<resources>

    <style name="OpulexTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Splashscreen" parent="Theme.AppCompat.NoActionBar"/>
    <style name="OpulexTheme.Toolbar">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>
    <style name="OpulexTheme.ButtonCool">
        <item name="android:background">@color/colorLightGrey</item>
        <item name="android:textColor">@color/colorVsLight</item>
    </style>
    <style name="OpulexTheme.ButtonPop">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="OpulexTheme.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

</resources>
