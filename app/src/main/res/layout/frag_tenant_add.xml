<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="tenantAddVM" type="com.example.opulexpropertymanagement.ab_view_models.TenantAddVM" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <include
            android:id="@+id/textinput_name"
            layout="@layout/includible_text_input"
            app:inputValidationState="@{tenantAddVM.nameInputValidationState}"
            app:hintZ='@{"Name"}' />

        <include
            android:id="@+id/textinput_email"
            layout="@layout/includible_text_input"
            app:inputValidationState="@{tenantAddVM.emailInputValidationState}"
            app:hintZ='@{"Email"}' />

        <include
            android:id="@+id/textinput_phone"
            layout="@layout/includible_text_input"
            app:inputValidationState="@={tenantAddVM.phoneInputValidationState}"
            app:hintZ='@{"Phone"}' />

        <ImageView
            android:src="@{tenantAddVM.image, default=@drawable/ic_add_box_black_24dp}"
            android:id="@+id/imageview_1"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <Button
            android:id="@+id/btn_add"
            style="@style/OpulexTheme.ButtonSoft"
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>