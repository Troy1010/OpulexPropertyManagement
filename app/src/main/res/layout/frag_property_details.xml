<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="propertyDetailsVM"
            type="com.example.opulexpropertymanagement.ab_view_models.PropertyDetailsVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageview_1"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            tools:src="@drawable/sample_house"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageview_1"
            android:text="@{propertyDetailsVM.property.singleLineAddress}"
            android:textColor="@color/colorVsLight"
            android:textSize="24dp"
            tools:text="ADDRESS" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>