<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tenantDetailsVM"
            type="com.example.opulexpropertymanagement.ab_view_models.TenantDetailsVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <include
            android:id="@+id/includible_tenant_image"
            layout="@layout/includible_rounded_image"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{tenantDetailsVM.tenant.name}"
            android:textColor="@color/colorVsLight"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/includible_tenant_image"
            tools:text="NAME" />

        <TextView
            android:id="@+id/textview_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="end"
            android:text="@{tenantDetailsVM.tenant.email}"
            android:textColor="@color/colorVsLight"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textview_email_title"
            app:layout_constraintStart_toEndOf="@id/textview_email_title"
            app:layout_constraintTop_toTopOf="@id/textview_email_title"
            tools:text="EMAIL" />

        <TextView
            android:id="@+id/textview_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_name"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_email_bot"
            app:barrierDirection="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textview_email, textview_email_title"/>


        <TextView
            android:id="@+id/textview_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="end"
            android:text="@{tenantDetailsVM.tenant.phone}"
            android:textColor="@color/colorVsLight"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textview_phone_title"
            app:layout_constraintStart_toEndOf="@id/textview_phone_title"
            app:layout_constraintTop_toTopOf="@id/textview_phone_title"
            tools:text="PHONE" />

        <TextView
            android:id="@+id/textview_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_email_bot"/>

        <androidx.constraintlayout.widget.Barrier
            app:barrierDirection="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textview_phone, textview_phone_title"
            android:id="@+id/barrier_phone_bot"/>


        <TextView
            android:id="@+id/textview_full_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="end"
            android:text="@{tenantDetailsVM.tenant.fullAddress}"
            android:textColor="@color/colorVsLight"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_full_address_title"
            app:layout_constraintTop_toTopOf="@id/textview_full_address_title"
            app:layout_constraintBottom_toBottomOf="@id/textview_full_address_title"
            tools:text="ADDRESS" />

        <TextView
            android:id="@+id/textview_full_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_phone_bot" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_address_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="textview_full_address_title, textview_full_address" />

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toTopOf="@id/barrier_address_bot"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_min="80dp"
            app:layout_constraintHeight_max="150dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>