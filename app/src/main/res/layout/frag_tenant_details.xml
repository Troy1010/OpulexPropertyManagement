<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tenantDetailsVM"
            type="com.example.opulexpropertymanagement.ab_view_models.TenantDetailsVM" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="16dp">

            <include
                android:id="@+id/includible_tenant_image"
                layout="@layout/includible_rounded_image"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{tenantDetailsVM.tenant.name}"
                android:textColor="@color/colorVsLight"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/includible_tenant_image"
                tools:text="NAME" />

            <TextView
                android:id="@+id/textview_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="@{tenantDetailsVM.tenant.email}"
                android:textColor="@color/colorVsLight"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/textview_email_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_email_title"
                app:layout_constraintTop_toTopOf="@id/textview_email_title"
                tools:text="EMAIL" />

            <TextView
                android:id="@+id/textview_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_name" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_email_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="textview_email, textview_email_title" />


            <TextView
                android:id="@+id/textview_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="@{tenantDetailsVM.tenant.phone}"
                android:textColor="@color/colorVsLight"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/textview_phone_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_phone_title"
                app:layout_constraintTop_toTopOf="@id/textview_phone_title"
                tools:text="PHONE" />

            <TextView
                android:id="@+id/textview_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Phone"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier_email_bot" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_phone_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="textview_phone, textview_phone_title" />


            <TextView
                android:id="@+id/textview_full_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="@{tenantDetailsVM.tenant.fullAddress}"
                android:textColor="@color/colorVsLight"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/textview_full_address_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_full_address_title"
                app:layout_constraintTop_toTopOf="@id/textview_full_address_title"
                tools:text="ADDRESS" />

            <TextView
                android:id="@+id/textview_full_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Address"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier_phone_bot" />


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_address_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="textview_full_address_title, textview_full_address" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorBackgroundHighlight"
                android:orientation="horizontal"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_max="150dp"
                app:layout_constraintHeight_min="80dp"
                app:layout_constraintTop_toTopOf="@id/barrier_address_bot" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="20dp"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="#fff" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>