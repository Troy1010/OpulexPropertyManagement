<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="userInfo"
            type="com.example.opulexpropertymanagement.ui.User" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/colorBackground">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textview_reason_for_login"
            android:layout_marginVertical="40dp"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            tools:text="REASON FOR LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/textview_reason_for_login"
            android:id="@+id/edittext_email"
            android:hint="Email"
            android:text="@{userInfo.email}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/edittext_email"
            android:id="@+id/edittext_password"
            android:hint="Password"
            android:text="@{userInfo.password}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/edittext_password"
            android:id="@+id/textview_new_user_click_here"
            android:gravity="center_horizontal"
            android:textColor="#00F"
            android:text="New user? Click here!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            style="@style/OpulexTheme.ButtonSoft"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Login"
            android:id="@+id/btn_login_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>