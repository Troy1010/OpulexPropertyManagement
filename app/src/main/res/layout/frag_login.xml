<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userInfo"
            type="com.example.opulexpropertymanagement.ui.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <include
            android:id="@+id/opulex_name_1"
            layout="@layout/opulex_name" />

        <TextView
            android:id="@+id/textview_sub_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/minion_pro_regular"
            android:gravity="center_horizontal"
            android:text="Property Management"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="@id/opulex_name_1" />

        <TextView
            android:id="@+id/textview_reason_for_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorVsDark"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/textview_sub_name"
            tools:text="REASON FOR LOGIN" />

        <ImageView
            android:id="@+id/imageview_opulex_chicago"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/house_opulex_chicago"
            app:layout_constraintTop_toBottomOf="@id/textview_reason_for_login" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinputlayout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_vs_dark_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="2dp"
            android:textColorHint="@color/colorVsDarkSoft"
            app:layout_constraintTop_toBottomOf="@id/imageview_opulex_chicago">

            <com.google.android.material.textfield.TextInputEditText
                android:textColor="@color/colorVsDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinputlayout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_vs_dark_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="2dp"
            android:textColorHint="@color/colorVsDarkSoft"
            app:layout_constraintTop_toBottomOf="@id/textinputlayout_email">

            <com.google.android.material.textfield.TextInputEditText
                android:textColor="@color/colorVsDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Password" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_margin="16dp"
            android:id="@+id/btn_login_send"
            android:layout_marginTop="20dp"
            style="@style/OpulexTheme.ButtonPop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@id/textinputlayout_password" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textview_new_user_click_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:text="New user? Click here!"
            android:textColor="@color/colorVsDark"
            app:layout_constraintTop_toBottomOf="@id/btn_login_send" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textview_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="Forgot Password?"
            android:textColor="@color/colorVsDark"
            app:layout_constraintTop_toBottomOf="@id/textview_new_user_click_here" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>