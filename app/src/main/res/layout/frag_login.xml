<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="userInfo"
            type="com.example.opulexpropertymanagement.ui.User" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/textview_reason_for_login"
            android:layout_marginVertical="40dp"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            tools:text="REASON FOR LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edittext_email"
            android:hint="Email"
            android:text="@{userInfo.email}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edittext_password"
            android:hint="Password"
            android:text="@{userInfo.password}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textview_new_user_click_here"
            android:gravity="center_horizontal"
            android:textColor="#00F"
            android:text="New user? Click here!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="GoBack"
            android:id="@+id/btn_go_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Login"
            android:id="@+id/btn_login_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>