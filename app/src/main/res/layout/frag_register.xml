<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="userInfo"
            type="com.example.opulexpropertymanagement.ui.User" />
    </data>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <include
                android:id="@+id/opulex_name_1"
                layout="@layout/opulex_name" />

            <TextView
                android:id="@+id/textview_sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/minion_pro_regular"
                android:gravity="center_horizontal"
                android:text="Property Management"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@id/opulex_name_1" />

            <ImageView
                android:id="@+id/imageview_opulex_chicago"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/house_opulex_chicago"
                app:layout_constraintTop_toBottomOf="@id/textview_sub_name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_vs_dark_background"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/colorVsDarkSoft"
                app:layout_constraintTop_toBottomOf="@id/imageview_opulex_chicago">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="Name"
                    android:textColor="@color/colorVsDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_vs_dark_background"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/colorVsDarkSoft"
                app:layout_constraintTop_toBottomOf="@id/textinputlayout_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="Phone"
                    android:textColor="@color/colorVsDark" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_vs_dark_background"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/colorVsDarkSoft"
                app:layout_constraintTop_toBottomOf="@id/textinputlayout_phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="Email"
                    android:textColor="@color/colorVsDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_vs_dark_background"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/colorVsDarkSoft"
                app:layout_constraintTop_toBottomOf="@id/textinputlayout_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:hint="Password"
                    android:textColor="@color/colorVsDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_register_send"
                style="@style/OpulexTheme.ButtonPop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="20dp"
                android:text="Register"
                app:layout_constraintTop_toBottomOf="@id/textinputlayout_password" />

            <TextView
                android:id="@+id/textview_already_registered_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Already registed? Sign in"
                android:textColor="@color/colorVsDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/btn_register_send" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>